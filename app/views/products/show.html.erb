<% title "Product" %>
<div class="container">
	<div class="row">
		<div class="span6">
			
<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>
<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Img Url:</strong>
  <%= @product.img_url %>
</p>

<p>
  <%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to 'Destroy', @product, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", products_path %>
</p>

</div>
	<div class="span6">
		<p><%= image_tag "/images/products/#{@product.img_url}" %></p>
		
	</div>
</div>
</div>