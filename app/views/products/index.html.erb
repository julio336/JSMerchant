<% title "Products" %>
<h1>All products</h1>
<div class="container">
	<div class="hero-unit">
      <h1>FoodWorks</h1>
      <h2>Your Online Grocery</h2>
    </div>
	<div class="row">
				<% @products.each do |product| %>
				<div class="span2 offset1">
				<p><%= product.title %></p>
				<p><%= image_tag "/images/products/#{product.img_url}" %></p>
				<p>Price: <span><%= print_price(product.price) %></span></p>
				<p>Description: <span><%= product.description %></span></p>
				<p><%= link_to "View", product_path(product) %></p>
			  	<p><%= button_to "Add to Cart", order_items_path(:product_id => product.id) %></p>
				</div>
				<% end %>
	</div>
	<p><%= link_to "Create a New Product", new_product_path, :id => "new_product" %></p>
	
</div>	
				
			
